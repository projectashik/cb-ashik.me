---
import Card from "../../components/Card.astro"
import PublicationLayout from "../../layouts/PublicationLayout.astro"

const blogs = (await Astro.glob("../../data/blogs/**/*.mdx")).sort(
  (a, b) =>
    new Date(b.frontmatter.date).valueOf() -
    new Date(a.frontmatter.date).valueOf()
)
---

<PublicationLayout title="Blogs">
  <h1 class="text-3xl font-heading font-bold">Blogs</h1>
  <div class="grid md:grid-cols-3 sm:grid-cols-2 grid-cols-1 gap-4">
    {blogs.map((blog) => <Card black blog={blog} />)}
  </div>
</PublicationLayout>

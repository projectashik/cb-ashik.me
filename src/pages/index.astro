---
import { Image } from "@astrojs/image/components"
import Container from "../components/Container.astro"
import Navbar from "../components/Navbar.astro"
const projects = await Astro.glob("../data/projects/*.mdx")
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@ChapagainAshik" />
    <meta name="twitter:title" content="Ashik Chapagain" />
    <meta name="twitter:description" content="FullStack Web Developer" />
    <!-- <meta name="twitter:image" content={image} /> -->
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Ashik Chapagain" />
    <meta property="og:description" content="FullStack Web Developer" />
    <!-- <meta property="og:image" content={image} /> -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500&family=Rubik:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />

    <title>Ashik Chapagain - Full Stack Web Developer</title>
  </head>
  <body>
    <section
      class="bg-[#040d21] pb-5 bg-gradient-to-br to-indigo-500 from-[#040d21]"
    >
      <Navbar />
      <div
        class="flex md:flex-row flex-col mt-14 md:mt-20 items-center justify-between lg:max-w-screen-lg md:max-w-screen-md sm:max-w-screen-sm max-w-xl mx-auto"
      >
        <div class="order-2 md:order-1">
          <h1
            class="font-heading text-center md:text-left text-3xl lg:text-4xl md:text-5xl text-gray-100 font-bold"
          >
            I'm a
            <p
              class="text-5xl md:text-7xl lg:text-6xl tracking-wide max-w-xl text-white font-black"
            >
              Fullstack Web Developer
            </p>
          </h1>
          <div
            class="flex items-center justify-center md:justify-start space-x-2 mt-5"
          >
            <a
              class="bg-[#010409] space-x-3 rounded-md inline-flex px-6 py-4 text-lg text-white"
              href="https://github.com/projectashik"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
              <span>GitHub</span>
            </a>
            <a
              class="bg-[#1D96E8] space-x-3 rounded-md inline-flex px-6 py-4 text-lg text-white"
              href="https://twitter.com/ChapagainAshik"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                aria-hidden="true"
                stroke="currentColor"
                stroke-width="2"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                ></path>
              </svg>
              <span>Twitter</span>
            </a>
          </div>
        </div>
        <div class="order-1 md:order-2 mb-3 md:mb-0">
          <Image
            class="rounded-full w-64 h-64 md:w-80 md:h-80"
            format="webp"
            src={"https://avatars.githubusercontent.com/u/47524279?v=4"}
            width={350}
            height={350}
          />
        </div>
      </div>
      <div class="flex justify-center my-10">
        <a href="#main">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-16 w-16 text-white animate-bounce"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M19 13l-7 7-7-7m14-8l-7 7-7-7"></path>
          </svg>
        </a>
      </div>
    </section>
    <main id="main" class="flex flex-col justify-center py-10 bg-[#040d21]">
      <div class="text-center">
        <h2
          class="relative before:absolute before:-top-2 before:-left-2 before:w-5 before:h-5 before:bg-red-500 after:absolute after:-bottom-2 after:-right-2 after:w-5 after:h-5 after:bg-indigo-500 hover:drop-shadow-2xl border p-4 text-2xl inline-block font-bold text-white"
        >
          Projects
        </h2>
      </div>
      <Container>
        <div class="grid grid-cols-2 md:grid-cols-4 mt-8 gap-3">
          {
            projects.map((project) => {
              return (
                <article class="text-gray-50 flex flex-col border p-3 rounded">
                  <Image
                    src={project.frontmatter.image}
                    width={1200}
                    class="mb-2"
                    format="webp"
                    height={630}
                    aspectRatio="16:9"
                  />
                  <h1 class="text-lg mb-1 font-bold">
                    {project.frontmatter.name}
                  </h1>

                  <p>{project.frontmatter.description}</p>
                  <div class="justify-self-end">
                    <a
                      class="bg-gray-900 p-2 inline-block mt-2"
                      href={`/projects/${project.frontmatter.slug}`}
                    >
                      Read more
                    </a>
                  </div>
                </article>
              )
            })
          }
        </div>
      </Container>
    </main>
  </body>
</html>
